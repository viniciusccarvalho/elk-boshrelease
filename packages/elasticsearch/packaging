# abort script on any command that exits with a non zero value
set -e

   echo "Extracting elasticsearch"
   pwd
   tar -zxvf elasticsearch/elasticsearch-1.1.0.tar.gz
   
   ls -l
   mkdir -p ${BOSH_INSTALL_TARGET}/elasticsearch
   ELASTICSEARCH_BIN_DIR=`dirname $(find . -type f -name 'elasticsearch' | head -n1)`
   ELASTICSEARCH_INSTALL_DIR=${ELASTICSEARCH_BIN_DIR%/*}
   cp -a ${ELASTICSEARCH_INSTALL_DIR}/* ${BOSH_INSTALL_TARGET}/elasticsearch
